<!--
        <entry>Current time of day;
         see <xref linkend="functions-datetime-current">
-->
        <entry>現在の時刻。<xref linkend="functions-datetime-current">を参照。
        </entry>
        <entry></entry>
        <entry></entry>
       </row>

       <row>
        <entry>
         <indexterm>
