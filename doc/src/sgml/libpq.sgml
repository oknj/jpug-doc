        int         sock;
        fd_set      input_mask;

        sock = PQsocket(conn);

        if (sock < 0)
]]>
<!--
            break;              /* shouldn't happen */
-->
<![CDATA[
            break;              /* 発生してはならない。 */

        FD_ZERO(&input_mask);
        FD_SET(sock, &input_mask);

        if (select(sock + 1, &input_mask, NULL, NULL, NULL) < 0)
        {
            fprintf(stderr, "select() failed: %s\n", strerror(errno));
            exit_nicely(conn);
        }

]]>
<!--
        /* Now check for input */
-->
<![CDATA[
        /* ここで入力を確認する。 */
        PQconsumeInput(conn);
        while ((notify = PQnotifies(conn)) != NULL)
        {
