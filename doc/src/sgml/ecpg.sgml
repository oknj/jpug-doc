     <member><xref linkend="ecpg-sql-disconnect"></member>
     <member><xref linkend="ecpg-sql-set-connection"></member>
    </simplelist>
   </refsect1>
  </refentry>

  <refentry id="ecpg-sql-deallocate-descriptor">
